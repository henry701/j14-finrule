<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zip</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/target/dependency/BOOT-INF/classes</directory>
            <outputDirectory>app</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/dependency/BOOT-INF/lib</directory>
            <outputDirectory>app/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/dependency/META-INF</directory>
            <outputDirectory>app/META-INF</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/docker-compose.yaml</source>
            <destName>docker-compose.yaml</destName>
            <outputDirectory>.</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${project.basedir}/DOCKERFILE</source>
            <outputDirectory>.</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>LICENSE</source>
            <outputDirectory>.</outputDirectory>
            <filtered>false</filtered>
        </file>
    </files>
</assembly>